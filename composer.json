{
  "name": "kennedytedesco/hashids-wrapper",
  "description": "Just a simple wrapper to Hashids.",
  "keywords": ["hashids", "wrapper"],
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Kennedy Tedesco",
      "email": "kennedyt.tw@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "hashids/hashids": "^4.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.15",
    "illuminate/container": "^5.8",
    "phpunit/phpunit": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "KennedyTedesco\\HashIdsWrapper\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "scripts": {
    "cs": [
      "vendor/bin/php-cs-fixer fix --allow-risky yes"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  }
}
